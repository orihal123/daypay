      </ul>
    </header>
  </div>

<%= form_with model: @income, url: incomes_path, data: { turbo: false }, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date, "収入日", class: 'control-label' %>
    <%= f.date_select :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "収入のカテゴリー" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, { class: "form-control", id: "item-category" }) %>
  </div>
  <div class="form-group">
    <%= f.label :income_amount, "収入額" %>
    <%= f.text_field :income_amount, class: "form-control", placeholder: "収入額を入力してください" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "送信", class: "btn btn-outline-success" %>
  </div>
<% end %>





