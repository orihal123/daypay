<%= render partial: 'layouts/header' %>

<div class="container">
  <%= form_with model: @budget, url: budgets_path, data: { turbo: false }, local: true do |f| %>
    <div class="form-group">
    <h3 class="my-0 fw-normal text-secondary ">Budgets</h3>
    <p>Let's record the money that can be used this month!!</p>

      <%= f.date_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
     
      <%= f.text_field :budget_amount, class: "form-control", placeholder: "Set your budget for the month" %>
    </div><br>
    
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>


<%= render partial: 'layouts/footer' %>